<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Survey Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Survey Title"
                    name="name" 
                    value="<%= survey.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="occupationTextField">Occupation</label>
                    <input type="text" class="form-control"
                    id="occupationTextField"
                    placeholder="Enter the Survey's Occupation"
                    name="occupation" 
                    value="<%= survey.occupation %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="attitudeTextField">Year</label>
                    <input type="text" class="form-control"
                    id="attitudeTextField"
                    placeholder="Enter the attitude of the surveyor"
                    name="attitude" 
                    value="<%= survey.attitude %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="genderTextArea">Gender</label>
                    <textarea type="text" class="form-control"
                    id="genderTextArea"
                    placeholder="Enter the gender of the surveyor"
                    name="gender" 
                    required>
                    <%= survey.gender %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="feedbackTextField">Feedback</label>
                    <input type="text" class="form-control"
                    id="feedbackTextField"
                    placeholder="Enter the surveyors feedback"
                    name="feedback" 
                    value="<%= survey.feedback %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>